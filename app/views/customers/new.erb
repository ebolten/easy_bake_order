<h1>Create Account</h1>

<% if @customer.errors %>
  <% @customer.errors.full_messages.each do |message|%>
    <%= message %>
  <%end%>
<%end%>

<%= form_for @customer do |c| %>
    <%= c.label "Choose a Username" %>
    <%= c.text_field :name %>
    <%= c.label "Enter your telephone number" %>
    <%= c.text_field :tel_num %>
    <%= c.label "Enter a password" %>
    <%= c.password_field :password_digest %>
    <%= c.submit "Create Account" %>
<% end %>
