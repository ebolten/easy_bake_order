
<body class='login'>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>

<div class="header">

<!-- <%= image_tag "bakery.jpg" %> -->

<h1 id="login-page-title"> Login</h1>
</div>

<div class="error">
    <%= flash.notice %>
</div >

<div class="login">
<%= form_tag "/login" do %>
    <%= label :name, "Username" %>
    <%= text_field_tag :name %><br>
    <br>
    <%= label :password_digest, "Password" %>
    <%= password_field_tag :password_digest%><br>
    <br>
    <%= submit_tag "Login"%>
<% end %>
</div>
</body>
<h1>Or Create an Account </h1>
<h3><%= link_to "Here", new_customer_path %></h3>
