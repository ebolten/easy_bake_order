<h1>Login or <%= link_to "Create an account", new_customer_path %></h1>

<div class="error">
    <%= flash.notice %>
</div>

<%= form_tag "/login" do %>
    <%= label :name, "Username" %>
    <%= text_field_tag :name %>
    <%= label :password_digest, "Password" %>
    <%= password_field_tag :password_digest%>
    <%= submit_tag "Login" %>
<% end %>
